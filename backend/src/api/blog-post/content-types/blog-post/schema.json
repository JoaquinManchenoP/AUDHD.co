{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "blogPost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "blogPostTitle": {
      "type": "string",
      "required": true
    },
    "blogPostDescription": {
      "type": "text",
      "required": true
    },
    "blogPostBody": {
      "type": "blocks",
      "required": true
    },
    "blogPostImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
